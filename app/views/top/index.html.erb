<!DOCTYPE html>
<html>
  <head>
    <title><%= t('views.title.root') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag('favicon.ico') %>
    <%= favicon_link_tag('apple-touch-icon-180x180.png',
                     {:rel => 'apple-touch-icon',
                      :sizes => '180x180',
                      :type => 'image/png'}) %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript"></script>
  </head>
  <body>
    <%= render 'layouts/flash_message' %>
    <div class="overview_wrapper d-flex align-items-center justify-content-center">
      <div class="overview_area shadow">
        <div class="row align-items-center m-0">
          <div class="d-none d-md-block col-md-5 col-lg-5 px-4">
            <div>
              <%= image_tag 'ibaraki_map.png' %>
              <div class="overview_float_area float_area1">
                <%= image_tag("key_visual2.jpg", class:"overview_float_img") %>
              </div>
              <div class="overview_float_area float_area2">
                <%= image_tag("key_visual1.png", class:"overview_float_img") %>
              </div>
              <div class="overview_float_area float_area3">
                <%= image_tag("key_visual4.png", class:"overview_float_img") %>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-7 col-lg-7 p-4 my-auto">
            <div class="overview_title_area px-5 my-3">
              <div class="overview_title_logo px-4">
                <%= image_tag 'overview_title.png', class:"p-0" %>
              </div>
            </div>
            <div id="myCarousel" class="carousel slide" data-bs-touch="false">
              <%# Indicator %>
              <ol class="carousel-indicators mb-1">
                <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
                <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
                <li data-bs-target="#myCarousel" data-bs-slide-to="3"></li>
                <li data-bs-target="#myCarousel" data-bs-slide-to="4"></li>
              </ol>
              <%# Inner %>
              <div class="carousel-inner">
                <%# Item 1 %>
                <div class="carousel-item active" data-bs-interval="4000">
                  <div class="carousel-caption">
                    <h3><%= t('views.messages.app_concept_title') %></h3>
                    <p><%= t('views.messages.app_concept_html') %></p>
                  </div>
                </div>
                <%# Item 2 %>
                <div class="carousel-item" data-bs-interval="4000">
                  <div class="carousel-caption">
                    <h3><%= t('views.messages.app_function1_title') %></h3>
                    <%= link_to image_path("func_image1.jpg"), "data-lightbox": "func_image1.jpg" do %>
                      <%= image_tag("func_image1.jpg") %>
                    <% end %>
                    <p><%= t('views.messages.app_function1_text_html') %></p>
                  </div>
                </div>
                <%# Item 3 %>
                <div class="carousel-item" data-bs-interval="4000">
                  <div class="carousel-caption">
                    <h3><%= t('views.messages.app_function2_title') %></h3>
                    <%= link_to image_path("func_image2.jpg"), "data-lightbox": "func_image2.jpg" do %>
                      <%= image_tag("func_image2.jpg") %>
                    <% end %>
                    <p><%= t('views.messages.app_function2_text_html') %></p>
                  </div>
                </div>
                <%# Item 4 %>
                <div class="carousel-item" data-bs-interval="4000">
                  <div class="carousel-caption">
                    <h3><%= t('views.messages.app_function3_title') %></h3>
                    <%= link_to image_path("func_image3_1.jpg"), "data-lightbox": "func_image3_1.jpg" do %>
                      <%= image_tag("func_image3_1.jpg") %>
                    <% end %>
                    <p><%= t('views.messages.app_function3_1_text_html') %></p>
                  </div>
                </div>
                <%# Item 5 %>
                <div class="carousel-item" data-bs-interval="4000">
                  <div class="carousel-caption">
                    <h3><%= t('views.messages.app_function3_title') %></h3>
                    <%= link_to image_path("func_image3_2.jpg"), "data-lightbox": "func_image3_2.jpg" do %>
                      <%= image_tag("func_image3_2.jpg") %>
                    <% end %>
                    <p><%= t('views.messages.app_function3_2_text_html') %></p>
                  </div>
                </div>
              </div>
              <%# Control Button %>
              <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <%# Login Button %>
            <div class="overview_button_area row p-3 mb-4">
              <div class="col-4 p-0 overview-login-btn">
                <%= link_to spots_path do %>
                  <div class="overview-login-item border text-white m-1">
                    <span class="bi bi-arrow-bar-up"></span>
                    <h3><%= t('views.button.common_login_html') %></h3>
                  </div>
                <% end %>
              </div>
              <div class="col-4 p-0 overview-login-btn">
                <%= link_to users_common_guest_sign_in_path, method: :post do %>
                  <div class="overview-login-item border text-white m-1">
                    <span class="bi bi-person-badge"></span>
                    <h3><%= t('views.button.guest_login_html') %></h3>
                  </div>
                <% end %>
              </div>
              <div class="col-4 p-0 overview-login-btn">
                <%= link_to users_admin_guest_sign_in_path, method: :post do %>
                  <div class="overview-login-item border text-white m-1">
                    <span class="bi bi-key"></span>
                    <h3><%= t('views.button.admin_guest_login_html') %></h3>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
